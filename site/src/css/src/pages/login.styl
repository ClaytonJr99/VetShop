.m-container-login {
  width: 100%;
  height: 100vh;
  background: #8df3da;
  display: flex;
  padding-top: 100px; 
}

.o-login-form {
  background: #ffffff url('~assets/images/bg-login.jpg') no-repeat;
  background-size: contain;
  background-position-x: right;
  max-width: 900px;
  width: 100%;
  height: 600px; 
  margin: 0 auto;
  color: $secondary;
  border-radius: 10px;
}

.o-login-fields {
  margin-left: 50px;
  max-width: 460px;
  width: 100%;
}

.a-login_title {
  font-size: 28px;
  color: $secondary;
  font-weight: bold;
}

.a-btn {
  margin-top: 20px;
  border-radius: 8px;
  padding: 0 20px;
}