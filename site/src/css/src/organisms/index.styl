.o-index {
  display: flex;
  justify-content: flex-start;
  justify-content: space-around;
}

.o-index-right {
  width: 360px;
  margin-top: 25px;
  margin-left: 25px;
  background:  $secondary;
  height: 400px;
  max-height: 500px;
  color: #fff;
  padding 10px;
  border-radius: 10px;
}

.a-right-title {
  padding-bottom 10px;
}

.list-right {
  color: #fff;
}

.m-index-footer {
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
  font-size: 14px;
}

.m-footer-list {
  display: flex;
  flex-direction: row;
  list-style: none;
}

.m-footer-list_item {
  margin-left: 10px;

  &:first-child {
    margin-left: 0;
  }
}

.m-footer-list-link {
  color: #ffffff;
}

.m-footer-list-link:hover {
  color: $secondary;
}

.a-footer-text {
  margin: 0; 
}